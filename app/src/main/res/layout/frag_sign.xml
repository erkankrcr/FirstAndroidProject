<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <EditText
        android:id="@+id/Sign_IDEt"
        android:background="@drawable/metinkavis"
        android:hint="Kullanıcı Adınız"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/Sign_PassEt"
        android:background="@drawable/metinkavis"
        android:hint="Şifreniz"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/Sign_PassTekrarEt"
        android:background="@drawable/metinkavis"
        android:hint="Tekrardan Şifreniz"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/Sbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/kavis"
        android:text="Kayıt Ol"/>

</LinearLayout>